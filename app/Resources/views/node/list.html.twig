{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <table class="table table-striped table-bordered">
            <caption>Nodes</caption>
            <thead>
                <th>Name</th>
                <th>IP</th>
                <th>Actions</th>
            </thead>

            <tbody>
                {% for node in nodes %}
                <tr>
                    <td>{{ node.name }}</td>
                    <td>{{ node.ip }}</td>
                    <td>
                        <a href="{{  path('snide_docker_node_edit', {'id': node.id}) }}">Info</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
