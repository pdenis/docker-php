<div class="span6">
    <div class="widget">
        <div class="widget-header">
            <h3>Network configuration</h3>
        </div>
        <div class="widget-content">
            <div>
                <span class="span2">IP Address : </span>
                <span><b>{{ network.iPAddress }}</b></span>
            </div>
            <div>
                <span class="span2">Gateway : </span>
                <span><b>{{ network.gateway }}</b></span>
            </div>
            <div>
                <span class="span2">MAC Address : </span>
                <span><b>{{ network.macAddress }}</b></span>
            </div>
            <div>
                <hr />
                <table class="table table-striped table-bordered">
                    <caption>Ports binding</caption>
                    <thead>
                        <th>Host</th>
                        <th>Container</th>
                        <th>Type</th>
                    </thead>
                    <tbody>
                        {% for key, config in ports %}
                            {% set tokens = key|split('/') %}
                            <tr>
                                <td>{{ config.0.hostPort }}</td>
                                <td>{{ tokens.0 }}</td>
                                <td>{{ tokens.1 }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
