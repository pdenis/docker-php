<div class="span6">
    <div class="widget widget-table">
        <div class="widget-header">
            <h3>Environment variables</h3>
        </div>
        <div class="widget-content">
            <table class="table table-striped table-bordered">
             <thead>
                <th>Name</th>
                <th>Value</th>
             </thead>
             <tbody>
                 {% for env in envVars  %}
                     {% set tokens = env|split('=') %}
                    <tr>
                        <td>{{ tokens.0 }}</td>
                        <td>{{ tokens.1 }}</td>
                    </tr>
                 {% endfor %}
             </tbody>
            </table>
        </div>
    </div>
</div>
