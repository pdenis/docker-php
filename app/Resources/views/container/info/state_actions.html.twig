<div class="span6">
    <div class="widget">
        <div class="widget-header">
            <h3>State & Actions</h3>
        </div>
        <div class="widget-content">
            {% if container.state.running %}
                <div class="alert alert-success"><strong>Container is running</strong></div>
                <div class="widget-content">
                    <a href="{{ path('snide_docker_container_stop', {'id': container.id}) }}">STOP</a> |Â 
                    <a href="{{ path('snide_docker_container_restart', {'id': container.id}) }}">RESTART</a>
                </div>
            {% else %}
                <div class="alert alert-warning"><strong>Container is stopped</strong></div>
                <div class="widget-content">
                    <a href="{{ path('snide_docker_container_start', {'id': container.id}) }}">START</a>

                </div>
            {% endif %}
        </div>
    </div>
    <div class="widget">
        <div class="widget-header">
            <h3>Actions</h3>
        </div>

    </div>
</div>
